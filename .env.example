# Database
DATABASE_URL="postgresql://username:password@localhost:5432/servicedesk"

# NextAuth.js
# NEXTAUTH_URL can be omitted to allow access from any IP address on the network
# When trustHost: true is set in auth config, NextAuth will auto-detect the host
# Uncomment and set only if you need to fix the URL to a specific domain
# NEXTAUTH_URL="https://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Application Settings
APP_NAME="Bank SulutGo ServiceDesk"
APP_URL="https://localhost:3000"
APP_VERSION="1.0.0"

# HTTPS Settings
USE_HTTPS=true
REDIRECT_HTTP=false
PORT=3000
HOSTNAME=localhost

# Email Configuration
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@banksulutgo.co.id"

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/plain"

# Security
ENCRYPTION_KEY="your-encryption-key-32-chars-long"
JWT_SECRET="your-jwt-secret-key"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL="info"

# External Services
SMS_API_KEY="your-sms-api-key"
SMS_API_URL="https://api.sms-provider.com"

# Development
NODE_ENV="development"
DEBUG=false

# ManageEngine ServiceDesk Plus Integration
MANAGEENGINE_URL="https://127.0.0.1:8081"
MANAGEENGINE_API_KEY="your-api-key-from-manageengine"
MANAGEENGINE_TECHNICIAN="technician-username"