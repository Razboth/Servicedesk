# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Bank SulutGo ServiceDesk
# ========================================

# ----------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------
# PostgreSQL connection string
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL="postgresql://servicedesk_user:YourSecurePassword123!@localhost:5432/servicedesk_database"

# ----------------------------------------
# AUTHENTICATION (NextAuth)
# ----------------------------------------
# The base URL of your application (update with your server IP or domain)
NEXTAUTH_URL="http://your-server-ip:3000"
# NEXTAUTH_URL="https://servicedesk.banksulutgo.co.id"  # For production with domain

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET="your-generated-secret-key-here-minimum-32-characters"

# ----------------------------------------
# APPLICATION SETTINGS
# ----------------------------------------
# Node environment
NODE_ENV="production"

# Application port
PORT=3000

# ----------------------------------------
# EMAIL CONFIGURATION (Optional)
# ----------------------------------------
# SMTP settings for sending emails
EMAIL_SERVER=""
EMAIL_FROM="noreply@banksulutgo.co.id"
EMAIL_USER=""
EMAIL_PASSWORD=""

# ----------------------------------------
# FILE UPLOAD SETTINGS
# ----------------------------------------
# Maximum file size in MB
MAX_FILE_SIZE=10

# Upload directory (absolute path)
UPLOAD_DIR="C:\\ServiceDesk\\uploads"

# ----------------------------------------
# MONITORING SETTINGS
# ----------------------------------------
# Enable/disable network monitoring on startup
AUTO_START_MONITORING="false"

# Monitoring intervals in milliseconds
BRANCH_MONITORING_INTERVAL=120000  # 2 minutes
ATM_MONITORING_INTERVAL=60000      # 1 minute

# ----------------------------------------
# SECURITY SETTINGS
# ----------------------------------------
# Session timeout in minutes
SESSION_TIMEOUT=30

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=30

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# ----------------------------------------
# API SETTINGS
# ----------------------------------------
# Rate limiting
API_RATE_LIMIT=100  # requests per minute
API_RATE_WINDOW=60000  # window in milliseconds

# ----------------------------------------
# LOGGING
# ----------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL="info"

# Log directory
LOG_DIR="C:\\ServiceDesk\\logs"

# ----------------------------------------
# BACKUP SETTINGS
# ----------------------------------------
# Backup directory
BACKUP_DIR="C:\\ServiceDesk\\backups"

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# ----------------------------------------
# PERFORMANCE
# ----------------------------------------
# Enable response compression
ENABLE_COMPRESSION=true

# Cache control max age (in seconds)
CACHE_MAX_AGE=3600

# ----------------------------------------
# FEATURES FLAGS
# ----------------------------------------
# Enable/disable specific features
ENABLE_NETWORK_MONITORING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_KNOWLEDGE_BASE=true
ENABLE_CUSTOM_REPORTS=true

# ----------------------------------------
# EXTERNAL SERVICES (Optional)
# ----------------------------------------
# SMS Gateway
SMS_GATEWAY_URL=""
SMS_GATEWAY_API_KEY=""

# External monitoring integration
EXTERNAL_MONITORING_URL=""
EXTERNAL_MONITORING_API_KEY=""

# ----------------------------------------
# NOTES
# ----------------------------------------
# 1. Replace all placeholder values with actual production values
# 2. Keep this file secure and never commit to version control
# 3. Ensure DATABASE_URL matches your PostgreSQL installation
# 4. Generate a unique NEXTAUTH_SECRET for production
# 5. Update NEXTAUTH_URL with your server's IP or domain
# 6. Configure email settings if you need email notifications
# 7. Adjust monitoring intervals based on your requirements
# 8. Set appropriate security settings for your organization